<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/gris"
    tools:context="com.muni.trujilloseguro.app.RegistrarActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



    <com.muni.trujilloseguro.components.MyEditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_camera"
        android:hint="@string/s_nombre"
        android:layout_marginTop="70dp"/>


    <com.muni.trujilloseguro.components.MyEditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_camera"
        android:hint="@string/s_e_mail"
        android:layout_marginTop="125dp"
        />


    <com.muni.trujilloseguro.components.MyEditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_camera"
        android:textColor="#2f3754"
        android:hint="@string/s_contrasenia"
        android:id="@+id/et_contrasenia"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#62ba67"
        android:paddingLeft="85dp"
        android:paddingRight="85dp"
        android:text="@string/s_acceder"
        android:textColor="#eaeaea"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="119dp" />

            <Button
                android:id="@+id/btn_registrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#62ba67"
                android:paddingLeft="85dp"
                android:paddingRight="85dp"
                android:text="@string/s_acceder"
                android:textColor="#eaeaea"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="119dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
