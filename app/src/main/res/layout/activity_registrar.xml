<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"

    tools:context="com.muni.trujilloseguro.app.RegistrarActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_title"
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:text="Trujillo Seguro"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#1b2533"
                android:textSize="28dp" />

            <com.muni.trujilloseguro.components.MyEditText
                android:id="@+id/et_nombre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/administrato24"
                android:maxLength="20"
                android:ems="10"
                android:hint="Nombre"
                android:background="@drawable/apptheme_edit_text_holo_light"
            />

            <com.muni.trujilloseguro.components.MyEditText
                android:id="@+id/et_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/email11"
                android:singleLine="true"
                android:maxLines="1"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="@string/s_e_mail"
                android:background="@drawable/apptheme_edit_text_holo_light"
                />

            <com.muni.trujilloseguro.components.MyEditText
                android:id="@+id/et_movil"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/phone24"
                android:layout_marginTop="15dp"
                android:inputType="phone"
                android:maxLength="9"
                android:ems="10"
                android:hint="Móvil"
                android:background="@drawable/apptheme_edit_text_holo_light"
                />

            <com.muni.trujilloseguro.components.MyEditText
                android:id="@+id/et_contrasenia"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/padlock24"
                android:layout_marginTop="15dp"
                android:inputType="textPassword"
                android:maxLength="10"
                android:ems="10"
                android:hint="Contraseña"
                android:background="@drawable/apptheme_edit_text_holo_light"
                />


            <Button
                android:id="@+id/btn_registrar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="45dp"
                android:layout_marginTop="45dp"
                android:background="#43c9cb"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:text="Registrarse"
                android:textColor="#eaeaea"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
